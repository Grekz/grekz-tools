---
export interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString('es-MX', {
			year: '2-digit',
			month: 'short',
			day: '2-digit',
			timeZone: Intl.DateTimeFormat().resolvedOptions().timeZone || 'UTC',
			// timeZoneName: 'short',
		})
	}
</time>
